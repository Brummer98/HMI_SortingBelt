@model HMI_SortingBelt.Models.TagModel

@{
    ViewData["Title"] = "Details";
}



<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HMI - Mini-factory interface</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid containerEditTags">
        <h1>Details</h1>

        <div class="row">
            <h4>Tag</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    # ID: 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-2">
                    Tag name: 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TagName)
                </dd>
                <dt class="col-sm-2">
                    Tag value: 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TagValue)
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink("Process control", "Edit", new {  id = Model.ID  }) |
            <a asp-action="Index">Back to home page</a>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
